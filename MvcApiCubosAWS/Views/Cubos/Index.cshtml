@model IEnumerable<MvcApiCubosAWS.Models.Cubo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdCubo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCubo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                <img src="@item.Imagen" style="width:150px; height:150px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
               <a asp-controller="Cubos" asp-action="Details" asp-route-id="@item.IdCubo" class="btn btn-outline-dark">Detalles</a>
               <a asp-controller="Cubos" asp-action="Update" asp-route-id="@item.IdCubo" class="btn btn-outline-info">Editar</a>
               <a asp-controller="Cubos" asp-action="Delete" asp-route-id="@item.IdCubo" class="btn btn-outline-danger">Eliminar</a>

            </td>
        </tr>
}
    </tbody>
</table>
